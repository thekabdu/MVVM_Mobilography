<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".DetailTour"  android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/imgTourContainer"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tour_Image"
            android:src="@drawable/bao"
            android:layout_width="match_parent"
            android:layout_height="270dp"
             />
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/imgTourContainer"
            android:layout_width="360dp"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/titleTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Big Almaty Lake" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/priceTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:textColor="@color/colorText"
                android:text="Price: 5000 Tenge" />

            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginTop="25dp"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:id="@+id/desTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/colormenuItem"
                android:textSize="18sp"
                android:text="To register for a tour trip write your phone number!" />


            <EditText
                android:id="@+id/num_phone"
                android:layout_width="316dp"

                android:layout_height="59dp"
                android:layout_margin="25dp"
                android:layout_marginBottom="@dimen/input_margin"
                android:drawableLeft="@drawable/ic_action_phone"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="number"
                android:textColor="#fff"
                android:textColorHint="#FAF7F7" />

            <Button
                android:id="@+id/reg_tour"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:text="Registration"
                android:background="@drawable/botton_bg"
                android:textColor="#FFFFFF"
                />



    </LinearLayout>

</LinearLayout>